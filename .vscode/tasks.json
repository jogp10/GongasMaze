{
    "version": "2.0.0",
    "tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"${file}",
				"${fileDirname}/jogo.cpp",
				"${fileDirname}/Player.cpp",
				"${fileDirname}/Robot.cpp",
				"${fileDirname}/Post.cpp",
				"${fileDirname}/Maze.cpp",
				"${fileDirname}/Game.cpp",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/g++"
		}
	]
}